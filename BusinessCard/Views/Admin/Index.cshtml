@model BusinessCard.Models.AuthenticatedAdmin

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Business Dashboard</title>
    <style>
        body {
            margin: 0;
            font-family: 'Roboto', sans-serif;
            background-color: #f4f5f7;
        }

        .navbar {
            background-color: #1a1a2e;
            color: white;
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
        }

            .navbar .logo {
                font-size: 22px;
                font-weight: bold;
            }

            .navbar .nav-links {
                list-style: none;
                margin: 0;
                padding: 0;
                display: flex;
            }

                .navbar .nav-links li {
                    margin-left: 20px;
                }

                .navbar .nav-links a {
                    color: white;
                    text-decoration: none;
                    font-weight: bold;
                    font-size: 14px;
                    transition: color 0.3s ease;
                }

                    .navbar .nav-links a:hover {
                        color: #e94560;
                    }

        .content {
            padding: 40px 20px;
            text-align: center;
        }

        .info-section {
            margin-bottom: 30px;
        }

            .info-section h1 {
                font-size: 28px;
                color: #1a1a2e;
                margin: 0;
            }

            .info-section p {
                font-size: 16px;
                color: #555555;
            }

        .circle-container {
            display: flex;
            justify-content: center;
            gap: 40px;
            margin: 20px 0;
        }

        .circle-counter {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .circle {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            background: #ffffff;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            border: 6px solid #e94560;
            position: relative;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .circle:hover {
                transform: translateY(-5px);
                box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.15);
            }

            .circle p {
                font-size: 36px;
                font-weight: bold;
                color: #1a1a2e;
                margin: 0;
            }

            .circle span {
                font-size: 16px;
                color: #555555;
                margin-top: 5px;
            }

        .extra-info {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 30px;
        }

            .extra-info .stat {
                background: #ffffff;
                padding: 20px;
                border-radius: 8px;
                box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
                text-align: center;
                flex: 1;
                max-width: 300px;
            }

                .extra-info .stat h3 {
                    font-size: 18px;
                    color: #1a1a2e;
                    margin-bottom: 10px;
                }

                .extra-info .stat p {
                    font-size: 20px;
                    font-weight: bold;
                    color: #e94560;
                }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="logo">Business Dashboard</div>
        <ul class="nav-links">
            <li>@Html.ActionLink("Home","Index",Model)</li>
            <li>@Html.ActionLink("Clients", "Clients")</li>
            <li>@Html.ActionLink("Logout", "Logout")</li>
        </ul>
    </nav>
    <div class="content">
        <div class="info-section">
            <h1>Welcome, @Model.admin.name!</h1>
            <p>Your role: Admin</p>
            <p>Last login: @Model.admin.lastLogin</p>
        </div>

        <div class="info-section">
            <p>Monitor your business metrics and manage operations efficiently.</p>
        </div>
        <div class="circle-container">
            <div class="circle-counter">
                <div class="circle">
                    <p>@Model.clientCount</p>
                    <span>Clients</span>
                </div>
            </div>
            <div class="circle-counter">
                <div class="circle">
                    <p>@Model.cardCount</p>
                    <span>Cards</span>
                </div>
            </div>
        </div>

    </div>
</body>
</html>
