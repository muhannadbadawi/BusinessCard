@model List<BusinessCard.Models.Card>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cards</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet"> <!-- Font Awesome CDN -->

    <style>
        body {
            margin: 0;
            font-family: 'Roboto', sans-serif;
            background-color: #f4f5f7;
        }
        .container {
            padding:20px
        }
        .back-button {
            position: relative;
            top:10px;
            left:10px;
            background-color: transparent;
            border: none;
            font-size: 1.5rem;
            color: #333333;
            cursor: pointer;
            transition: color 0.3s ease;
        }

            .back-button:hover {
                color: #5e7a7d;
            }

        .navbar {
            background-color: #1a1a2e;
            color: white;
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
        }

            .navbar .logo {
                font-size: 22px;
                font-weight: bold;
            }

            .navbar .nav-links {
                list-style: none;
                margin: 0;
                padding: 0;
                display: flex;
            }

                .navbar .nav-links li {
                    margin-left: 20px;
                }

                .navbar .nav-links a {
                    color: white;
                    text-decoration: none;
                    font-weight: bold;
                    font-size: 14px;
                    transition: color 0.3s ease;
                }

                    .navbar .nav-links a:hover {
                        color: #e94560;
                    }


        h1 {
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            text-align: left;
            padding: 10px;
        }

        th {
            background-color: #f4f4f4;
            color: #444;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        td {
            border: 1px solid #ddd;
        }

            td a {
                color: blue;
                text-decoration: none
            }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="logo">Business Dashboard</div>
        <ul class="nav-links">
            <li>@Html.ActionLink("Home", "Index", Model)</li>
            <li>@Html.ActionLink("Clients", "Clients")</li>
            <li>@Html.ActionLink("Logout", "Logout")</li>
        </ul>
    </nav>
    <button class="back-button" onclick="window.history.back();">
        <i class="fas fa-arrow-left"></i>
    </button>
    <div class="container">

        <h1>Cards</h1>
        @if (Model != null && Model.Any())
        {
            <table border="1" cellpadding="5" cellspacing="0">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Company Name</th>
                        <th>Job Title</th>
                        <th>Location</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var card in Model)
                    {
                        <tr>
                            <td>@card.email</td>
                            <td>@card.phone</td>
                            <td>@card.companyName</td>
                            <td>@card.jobTitle</td>
                            <td>@card.location</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No clients available.</p>
        }

